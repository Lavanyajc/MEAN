version: "3.9"

services:
  nginx:
    image: nginx:alpine
    container_name: nginx-reverse-proxy
    ports:
      - "80:80"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - frontend
      - backend
    networks:
      - mean-network

  frontend:
    build:
      context: lavanyajc/frontend
      dockerfile: Dockerfile
    container_name: frontend-app
    expose:
      - "80"
    networks:
      - mean-network

  backend:
    build:
      context: lavanyajc/backend
      dockerfile: Dockerfile
    container_name: backend-app
    environment:
      - MONGO_URL=mongodb://mongodb:27017/dd_db
      - PORT=3000
    expose:
      - "3000"
    depends_on:
      - mongodb
    networks:
      - mean-network

  mongodb:
    image: mongo:6
    container_name: mongodb
    volumes:
      - mongo-data:/data/db
    expose:
      - "27017"
    networks:
      - mean-network

networks:
  mean-network:

volumes:
  mongo-data: 
